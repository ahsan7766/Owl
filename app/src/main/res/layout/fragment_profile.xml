<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:id="@+id/image_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:text="Profile Picture"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/text_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_profile_picture"
        android:gravity="center"
        android:text="John Doe"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_profile_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_profile_name"
        android:gravity="center"
        android:text="Software Developer"
        android:layout_marginBottom="20dp"/>

    <com.example.owl.views.ProfileCounterView
        android:id="@+id/profile_counter"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/text_profile_subtitle"
        android:layout_margin="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_counter"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Edit" />

</RelativeLayout>
