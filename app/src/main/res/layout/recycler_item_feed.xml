<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical">

    <!--
    <com.ourwayoflife.owl.views.FeedItemView
        android:id="@+id/feed_category"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"/>
    -->

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9">

        <com.ourwayoflife.owl.views.ProfilePictureView
            android:id="@+id/profile_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical|start"
            android:textAlignment="textStart"
            android:text="Name"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"/>

        <ToggleButton
            android:id="@+id/toggle_button_like"
            style="@style/toggleButtonLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_like_bg"
            android:scaleType="fitCenter"
            android:textOff=""
            android:textOn=""/>

    </LinearLayout>

</LinearLayout>